<div class= "container x=5 px-sm-0">
  <div class = "row">
    <h3>注文履歴一覧</h3>
  </div>
  <div class= "row">
    <table class ="table table table-bordered">
      <thead class="table-light">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th colpan="5"></th>
          <th>注文商品</th>
          <th>支払い金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.address %></td>
          <td colpan="5"></td>
          <td>
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
            <% end %>
          </td>
          <td><%= order.total_payment %></td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "表示する", new_order_path, class: "btn btn-sm btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
