<div class= "container x=5 px-sm-0">
  <div class = "row">
    <div class = "col-md-5">
      <h3>注文履歴詳細</h3>
    </div>
  </div>

  <div class = "row">
    <div class="col-lg-6">
      <h4>注文情報</h4><br>
      <table class ="table table table-bordered">
          <tr>
            <th class="table-active">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="table-active">配送先</th>
            <td>
              <%= "〒" + @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th class="table-active">支払い方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th class="table-active">ステータス</th>
            <td><%= @order.status_i18n%></td>
          </tr>
      </table>
    </div>
    <div class="col-lg-4">
      <h4>請求情報</h4><br>
      <table class ="table table table-bordered">
        <tr>
            <th class="table-active">商品合計</th>
            <td><%= @order.total_payment %><td>
          </tr>
          <tr>
            <th class="table-active">配送料</th>
            <td>
              <%# @total += @order_details.subtotal %>
              <%#= @total %><br>
            </td>
          </tr>
          <tr>
            <th class="table-active">ご請求額</th>
            <td><%= @order.total_payment %></td>
            <!--＋配送料-->
          </tr>
      </table>
    </div>
  </div>
  <div class = "row">
    <div class="col-lg-8">
      <h4>注文内容</h4><br>
      <table class ="table table table-bordered">
        <thead class="table-active">
          <tr>
            <th>商品</th>
            <th colpan="3"></th>
            <th>単価(税込み)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <% @order.order_details.each do |order_detail| %>
        <tbody>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td colpan="3"></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal %></td>
            </td>
           </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>