<div class= "container x=5 px-sm-0">
  <div class = "row">
    <h3>注文情報確認</h3>
  </div>

  <div class= "row">
       <div class="col-lg-8">
         <table class ="table table table-bordered">
           <thead class="table-light">
              <tr>
                <th>商品名</th>
                <th colpan="3"></th>
                <th>単価(税込み)</th>
                <th>数量</th>
                <th>小計</th>
              </tr>
           </thead>
           <tbody>
            <% @cart_items.each do |cart_item| %>
             <tr>
              <td><%= cart_item.item.name %></td>
              <td colpan="3"></td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td><%=  cart_item.subtotal %></td>
              <td><% @total += cart_item.subtotal %></td>
             </tr>
             <% end %>
           </tbody>
         </table>
       </div>

       <div class="col-lg-4">
         <table class ="table table table-bordered">
              <tr>
                <th>小計</th>
                <% @order.shipping_cost = 800 %>
                <td><%= @order.shipping_cost %></td>
              </tr>
              <tr>
                <th>商品合計</th>
                <td><%= @total.to_i %></td>
              </tr>
              <tr>
                <th>請求金額</th>
                <% @order.total_payment = @order.shipping_cost + @total.to_i %>
                <td><%= @order.total_payment %></td>
              </tr>
         </table>
       </div>
  </div>
  <div class="row">
    <table class="table table-borderless">
      <tr>
        <th>支払い方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>お届け先</th>
        <td>
          <%= @order.postal_code %>
          <%= @order.address %>
          <%= @order.name %>
        </td>
      </tr>
    </table>
  </div>
  <%= link_to "注文を確定する", orders_complete_path, class: "btn btn-sm btn-success" %>


</div>