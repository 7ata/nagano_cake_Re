<h3>注文情報入力</h3>

<h4>支払い方法</h4>
  <%= form_with model: @order, local: true, url: orders_confirm_path do |f| %>
    <div class="form-group">
      <%= f.radio_button :peyment_method_i18n,0 ,checked: "checked" %>
      <%= f.label :peyment_method, "クレジットカード" %>
      <%= f.radio_button :peyment_method_i18n, 1 %>
      <%= f.label :peyment_method, "銀行振込" %>
    </div>


<h4>お届け先</h4>

    <div class="form-group">
      <%= f.radio_button :address_option,0,checked: "checked" %> <!--checked:予めbuttn選択される-->
      <%= f.label :address_option_0, "ご自身の住所" %><br>
      <%= @customer.postal_code + @customer.address %>
      <%= @customer.last_name + @customer.fast_name %>
    </div>

    <div class="form-group">
      <%= f.radio_button :address_option,1 %>
      <%= f.label :address_option_1, "登録済み住所から選択" %><br>
      <%= f.collection_select(:registered, @addresses, :id, :address) %>
    </div>

    <div class="form-group">
      <%= f.radio_button :address_option,2 %>
      <%= f.label :address_option_2, "新しいお届け先" %><br>
      <%= f.label :postal_code, "郵便番号", class: "label" %>
      <%= f.text_field :postal_code, autofocus: true, id: "inputPostal_code", placeholder: "000-0000" %>
    </div>

    <div class="form-group">
       <%= f.label :address, "住所", class: "label" %>
       <%= f.text_field :address, id:"inputAddress", placeholder: "東京都文京区小石川０−０" %>
    </div>
    <div class="form-group">
       <%= f.label :name,"宛名", class: "label" %>
       <%= f.text_field :name, id: "inputName", placeholder: "東京花子" %>
    </div>

       <%= f.submit "確認画面へ進む", class: "btn btn-sm btn-primary" %>

  <% end %>



