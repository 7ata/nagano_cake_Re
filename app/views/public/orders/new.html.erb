<h3>注文情報入力</h3>

<h4>支払い方法</h4>
  <%= form_with model: @order, local: true, url: orders_confirm_path do |f| %>
    <div class="form-group">
      <%= f.radio_button :peyment_method, :0 %>
      <%= f.label :peyment_method, @order.payment_methods_i18n[:credit_card] %>
      <%= f.radio_button :peyment_method, :1 %>
      <%= f.label :peyment_method, "銀行振込" %>
    </div>


<h4>お届け先</h4>

    <div class="form-group">
      <%= f.radio_button :address_option,0 %>
      <%= f.label :customer_id, "ご自身の住所" %>
      <%= @customer.postal_code + @customer.address %>

      <%= f.radio_button :address_option,1 %>
      <%= f.label :, "登録済み住所から選択" %>
      <%= f.select :customer_id, options_from_collection_for_select(@addresses, :id, :address) %>

      <%= f.radio_button :address_option,2 %>
      <%= f.label :, "新しいお届け先" %>

      <div class="form-group">
       <%= f.label :postal_code, "郵便番号", class: "label" %>
       <%= f.text_field :postal_code, autofocus: true, id:"inputPostal_code", placeholder:"郵便番号" %>
     </div>
     <div class="form-group">
       <%= f.label :address, "住所", class: "label" %>
       <%= f.text_area :address, id:"inputAddress", placeholder: "住所" %>
     </div>
     <div class="form-group">
       <%= f.label :name,"宛名", class: "label" %>
       <%= f.text_field :name, id:"inputName", placeholder: "宛名" %>
       <%= f.submit "新規登録" , class:'btn btn-sm btn-success' %>
     </div>

    </div>

  <% end %>



<%= link_to "確認画面へ進む", orders_confirm_path, class: "btn btn-sm btn-primary" %>

