<div class= "container">
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-7 px-7 px-sm-0 col-auto">
      <h2>配送先登録/一覧</h2>
    </div>
  </div>

  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-7 px-7 px-sm-0 mx-auto">

    <%= form_with model: @address, local: true,url: addresses_path do |f| %>
     <div class="form-group">
       <%= f.label :postal_code, "郵便番号", class: "label" %>
       <%= f.text_field :postal_code, autofocus: true, id:"inputPostal_code", placeholder:"郵便番号" %>
     </div>
     <div class="form-group">
       <%= f.label :address, "住所", class: "label" %>
       <%= f.text_area :address, id:"inputAddress", placeholder: "住所" %>
     </div>
     <div class="form-group">
       <%= f.label :name,"宛名", class: "label" %>
       <%= f.text_field :name, id:"inputName", placeholder: "宛名" %>
       <%= f.submit "新規登録" , class:'btn btn-sm btn-success' %>
    <% end %>
     </div>

    </div>
 </div>

<div class= "row">
   <div class= "col-sm-12 col-md-8 col-lg-7 px-7 px-sm-0 mx-auto">
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
         <th>郵便番号</th>
         <th>住所</th>
         <th colpan="3"></th>
         <th>宛名</th>
         <th></th>
         <th colpan="2"></th>
        </tr>
       </thead>
       <tbody>
        <% @addresses.each do |address| %>
         <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td colpan="3"></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id),class:'btn btn-sm btn-success' %>
            <%= link_to "削除する", address_path(address.id),class: "btn btn-sm btn-danger",
            method: :delete, data: { confirm: "本当に削除しますか?" } %>
        <% end %>
          </td>
          <td colpan="2"></td>
         </tr>
       </tbody>
      </table>
      <%#= paginate @customers %>
    </div>
  </div>

 </div>
