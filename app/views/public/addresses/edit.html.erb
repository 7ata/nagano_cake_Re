<div class= "container">
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-7 px-7 px-sm-0 col-auto">
      <h3>配送先編集</h3>
    </div>
  </div>

  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-7 px-7 px-sm-0 mx-auto">

    <%= form_with model: @address, local: true,url: edit_address_path do |f| %>
     <div class="form-group">
       <%= f.label :postal_code,"郵便番号", class: "label" %>
       <%= f.text_field :postal_code %>
     </div>
     <div class="form-group">
       <%= f.label :address, "住所", class: "label" %>
       <%= f.text_field :address %>
     </div>
     <div class="form-group">
       <%= f.label :"宛名", class: "label" %>
       <%= f.text_field :name, autofocus: true %>
       <%= f.submit "変更内容を保存" , class:'btn btn-sm btn-success' %>
   <% end %>
    </div>

    </div>
 </div>

</div>