<div class="container px=5 px-sm-0">
  <div class= "row">
    <h3>新規会員登録</h3>
  </div>

  <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
    <div class="row mb-3">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :"名前" %>
          <%= f.text_field :last_name %>
          <%= f.text_field :fast_name %>
        </div>

        <div class="field">
          <%= f.label :"フリガナ" %>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :fast_name_kana %>
        </div>

        <div class="field">
          <%= f.label :"メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :"郵便番号" %>
          <%= f.text_field :postal_code %>
        </div>


        <div class="field">
          <%= f.label :"住所" %>
          <%= f.text_field :address %>
        </div>


        <div class="field">
          <%= f.label :"電話番号" %>
          <%= f.text_field :telephone_number %>
        </div>

        <div class="field">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード（確認用）" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class:'btn btn-sm btn-success'%>
        </div>
      <% end %>
    </div>
  </div>
      <h3>既に登録済みの方</h3>
      <p><%= link_to "こちら", new_customer_session_path %>からログインしてください</p>

</div>