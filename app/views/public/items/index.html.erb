<table>
    <tr>
      <th>ジャンル検索</th>
      <th></th>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
    <td><%= genre.name %></td>
    </tr>
    <% end %>
</table>


<table class="table_box">
  <% @items.each do |item| %>
  <tr>
    <th><%= link_to item.name,item_path(item.id) %></th>
  </tr>
  <tr>
    <td>¥<%= item.price %></td>
  </tr>
  <% end %>
</table>
<%= paginate @items %>