<div class= "row">
  <div class="col-lg-2">
    <table class="table table-bordered border-dark">
      <tr>
        <th>ジャンル検索</th>
      </tr>
      <% @genres.each do |genre| %>
      <tr>
      <td><%= genre.name %></td>
      </tr>
      <% end %>
    </table>
  </div>

  <div class="col-lg-10">
    <h3>商品一覧(全。件）</h3>
    <table class="table_box">
      <% @items.each do |item| %>
      <tr>
        <th><%= link_to item.name,item_path(item.id) %></th>
      </tr>
      <tr>
        <td>¥<%= item.price %></td>
      </tr>
      <% end %>
    </table>
    <%= paginate @items %>
  </div>
</div>