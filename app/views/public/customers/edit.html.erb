<div class= "container">
  <div class = "row">
    <h2 class="title">マイページ</h2>
  </div>
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-7 px-7 px-sm-0 mx-auto">

      <%= form_with model: @customer, local: true,url: customer_path(@customer.id) do |f| %>
       <div class="form-group">
         <%= f.label :"氏名", class: "label" %>
         <%= f.text_field :last_name, autofocus: true %>
         <%= f.text_field :fast_name, autofocus: true %>
       </div>
       <div class="form-group">
         <%= f.label :"フリガナ", class: "label" %>
         <%= f.text_field :last_name_kana %>
         <%= f.text_field :fast_name_kana %>
       </div>
       <div class="form-group">
         <%= f.label :postal_code,"郵便番号", class: "label" %>
         <%= f.text_field :postal_code %>
       </div>
       <div class="form-group">
         <%= f.label :address, "住所", class: "label" %>
         <%= f.text_field :address %>
       </div>
       <div class="form-group">
         <%= f.label :telephone_number, "電話番号", class: "label" %>
         <%= f.text_field :telephone_number %>
       </div>
       <div class="form-group">
         <%= f.label :email, "メールアドレス", class: "label" %>
         <%= f.text_field :email %>
       </div>

        <%= f.submit "編集内容を保存" , class:'btn btn-sm btn-success' %>
      <% end %>

        <%#= link_to "退会する", unsubscribe_path(@customer.id), class: "btn btn-sm btn-danger", method: :update, data: { confirm: "Are you sure?" } %>


    </div>
  </div>
</div>