<div class= "container">
  <div class = "row">
    <h2 class="title">マイページ</h2>
  </div>
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-7 px-7 px-sm-0 mx-auto">
      <p>
        登録情報
        <%= link_to "編集する", edit_customer_path(@customer.id),class: "btn btn-sm btn-success" %>
      </p>
      <table class= "table table table-bordered">
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name + @customer.fast_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana + @customer.fast_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <p>
        配送先
        <%= link_to "一覧を見る", addresses_path,class: "btn btn-sm btn-primary" %>
      </p>
      <p>
        注文履歴
        <%= link_to "一覧を見る", orders_path,class: "btn btn-sm btn-primary" %>
      </p>
    </div>
  </div>
</div>