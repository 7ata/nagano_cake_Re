<div class= "container">
  <div class = "row justify-content-between">
    <h2 class="col-4">
     商品一覧
    </h2>
    <div class ="col-2">
     <%= link_to new_admin_item_path, class:"btn btn-outline-secondary btn-block" do %>
     <i class="fa-duotone fa-plus"></i>
     <% end %>
    </div>
  </div>
  <div class= "row">
   <div class= "col-sm-12 col-md-8 col-lg-7 px-7 px-sm-0 mx-auto">
      <table class="table table-hover table-inverse">
       <thead class="table-active">
        <tr>
         <th>商品ID</th>
         <th>商品名</th>
         <th colpan="2"></th>
         <th>税抜き価格</th>
         <th>ジャンル</th>
         <th>ステータス</th>
        </tr>
       </thead>
       <tbody>
        <% @items.each do |item| %>
         <tr>
          <td><%= item.id %></td>
          <td>
           <%= link_to admin_item_path(item.id) do %>
           <%= item.name %>
           <% end %>
          </td>
          <td colpan="2"></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active ? '販売中' : '販売停止中'%></td>
         </tr>
        <% end %>
       </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>