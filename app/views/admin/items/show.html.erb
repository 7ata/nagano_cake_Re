<div class= "container">
  <div class = "row">
    <h2 class="title">
      商品詳細
    </h2>
  </div>

  <div class= "row justify-content-center">
    <div class= "col-4">
          <p>
            <% if @item.image.attached? %>
              <%= image_tag @item.image,size: "300x300"%>
            <% else %>
              <%= image_tag 'no_image',size: "300x300"%>
            <% end %>
          </p>
    </div>
    <div class= "col-6">
      <table class= "table table table-borderless">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th><br>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th><br>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込み価格<br>(税抜き価格)</th><br>
          <td><%= @item.with_tax_price %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <%#= form_with model: @item, local: true do |f| %>
          <td>
           <%= @item.is_active ? '販売中' : '販売停止中' %>
          </td>
          <%# end %>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item.id),class: "btn btn-sm btn-success" %>
    </div>
  </div>
</div>