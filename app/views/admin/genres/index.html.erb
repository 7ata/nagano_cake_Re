<div class= "container">
  <div class = "row">
    <h2 class="title">ジャンル一覧・追加</h2>
  </div>
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 col-auto">

      <%= form_with model: @genre,url: {controller: 'genres', action: 'create'} do |f| %>
      <div class="form-group">
        <%= f.label :"ジャンル名" %>
        <%= f.text_field :name ,placeholder:"ジャンル名"%>
        <%= f.submit "新規登録", class:'btn btn-sm btn-success' %>
      <% end %>
      </div>
    </div>
  </div>

  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 col-auto">
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
       </thead>
       <tbody>
        <% @genres.each do |genre| %>
             <tr>
              <td>
               <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %>
              </td>
             </tr>
            <% end %>
       </tbody>
      </table>
    </div>
  </div>