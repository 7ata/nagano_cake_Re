<div class= "container">
   <div class= "row">
     <h2 class="title">ジャンル編集</h2>
   </div>
   <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 col-auto">

       <div><%= form_with model: @genre,url: {controller: 'genres', action: 'update'} do |f| %>
              <%= f.label :"ジャンル名" %>
              <%= f.text_field :name, autofocus: true, :placeholder =>"#{@genre.name}" %>
              <%= f.submit "変更を保存" ,class:'btn btn-sm btn-success' %>
              <% end %>
       </div>
     </div>
    </div>

  </div>
