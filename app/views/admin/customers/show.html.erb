<div class= "container">
  <div class = "row">
    <h2 class="title">
      会員詳細
    </h2>
  </div>

  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-7 px-7 px-sm-0 mx-auto">
      <table class= "table">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name + @customer.fast_name %></td>
        </tr>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana + @customer.fast_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号<br></th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        </tr>
        <tr>
          <th>メールアドレス<br></th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <%#= form_with model: @item, local: true do |f| %>
          <td>
           <%= @customer.is_deleted %>
          </td>
          <%# end %>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_customer_path(@customer.id),class: "btn btn-sm btn-success" %>
    </div>
  </div>
</div>