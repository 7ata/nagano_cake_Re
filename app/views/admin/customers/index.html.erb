<div class= "container">
  <div class = "row">
    <h2 class="title">会員一覧</h2>
  </div>
  <div class= "row">
   <div class= "col-sm-12 col-md-8 col-lg-7 px-7 px-sm-0 mx-auto">
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
         <th>会員ID</th>
         <th>氏名</th>
         <th colpan="2"></th>
         <th>メールアドレス</th>
         <th colpan="2"></th>
         <th>ステータス</th>
        </tr>
       </thead>
       <tbody>
        <% @customers.each do |customer| %>
         <tr>
          <td><%= customer.id %></td>
          <td>
           <%= link_to admin_customer_path(customer.id) do %>
           <%= customer.last_name + customer.fast_name %>
           <% end %>
          </td>
          <td colpan="2"></td>
          <td><%= customer.email %></td>
          <td colpan="2"></td>
          <td><%= customer.is_deleted %></td>
         </tr>
        <% end %>
       </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>