<div class= "container">
  <div class = "row">
    <h2 class="title">
      注文履歴一覧
    </h2>
  </div>
  <div class= "row">
   <div class= "col-sm-12 col-md-8 col-lg-7 px-7 px-sm-0 mx-auto">
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
         <th>購入日時</th>
         <th>購入者</th>
         <th colpan="2"></th>
         <th>注文個数</th>
         <th colpan="2"></th>
         <th>注文ステータス</th>
        </tr>
       </thead>
       <tbody>
        <% @orders.each do |order| %>
         <tr>
          <td>
           <%= link_to admin_orders_show_path do %>
           <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
           <% end %>
          </td>

          <td>
           <%= order.customer.last_name + order.customer.fast_name %>
          </td>
          <td colpan="2"></td>
          <td>注文個数</td>
          <td colpan="2"></td>
          <td><%= order.status_i18n %></td>
         </tr>
        <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>